$color1 = #606060;
$color2 = #455A64;


body{
    margin-left 360px;
    padding-top 0;
    margin-top 0;
    font-family 'Roboto', sans-serif;
    color $color1;
    -webkit-font-smoothing subpixel-antialiased;
}

header {
    position relative;
    background-color #4f6873;
    display block;
    height auto;
    box-shadow 0 3px 5px 0 rgba(0, 0, 0, 0.15), 0 3px 10px 0 rgba(0, 0, 0, 0.15);
    text-align center;

    h1 {
        padding-top 25px;
        margin-top 0;
        text-shadow 2px 2px 2px rgba(0, 0, 0, 0.29);
        color #fff;
        font-size 2em;
        font-weight 400;
    }
    h4 {
        margin-top -25px;
        margin-bottom 45px;
        padding-bottom 110px;
        font-size 1.2em;
        line-height 1.5;
        font-weight 300;
        color #fff;
        text-shadow 2px 2px 2px rgba(0, 0, 0, 0.29);
    }
    img {
        position absolute;
    }
}

/* About section */
section#about{
    width 80%;
    margin 0 auto;
    box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
    padding-bottom 25px;
    figure{
        position absolute;
        width 180px;
        height 180px;
        top 90px;
        left 53%;
        z-index 1;
        display block;
        border-radius 50%;
        background-color #FFF;
        padding 5px;
        box-shadow 0 3px 5px 0 rgba(0, 0, 0, 0.2), 0 3px 10px 0 rgba(0, 0, 0, 0.2);
        img{
            width 180px;
            height 180px;
            border-radius 50%;
        }
    }
    div#social{
        text-align center;
        padding-top 70px;
        img{
            margin-left 15px;
            width 30px;
        }
    }
    p{
        padding 0 5%;
        margin 32px 0;
    }

    div#buttons{
        width 100%;
        text-align center;
        padding-bottom  45px;
    }
}

section#experience{
    h3{
        text-align center;
        font-size 2em;
    }
    div#timeline{
        div.item-experience{
            width 80%;
            margin 0 auto;
            box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
            margin-bottom 20px;
            .toolbar{
                background-color: $color2 !important;
                span{
                    color #FFF !important;
                    font-size 1.2em !important;
                    font-weight 400;
                }
            }
        }
        p{
            padding 0 20px;
            color $color1;
            font-weight 300;
            font-size 15px;
            line-height 21.4286px
        }
    }
}

section#skills{
    width 90%;
    margin 0 auto;
    color white;
    h4{
        text-align center;
        font-size 1.2em;
    }
    div.skill{
        background-color $color2;
        width 30%;
        float left;
        display block;
        margin-left 20px;
        ul{
            padding 0;
            margin 0 15px;
            li{
                font-size 15px;
                list-style none;
                strong{
                    font-weight 300;
                    display block;
                    width 100%;
                    span{
                        float right;
                    }
                }
            }
        }
    }
}

section#services{
    width 90%;
    margin 0 auto;
    h3{
        text-align center;
        font-size 2em;
    }
    div.service{
        box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
        float left;
        width 30%;
        color $color1;
        margin-bottom 3%;
        margin-left 3%;
        min-height 430px;
        figure{
            width 90%;
            margin 0 auto;
            text-align center;
            margin-top 25px;
            svg{
                color $color2 !important;
            }
        }
            h4{
                text-align center;
                line-height 1.4;
                font-weight 400;
                font-size 1.25em;
            }
            p{
                padding 0 25px;
                text-align center;
                font-weight 300;
                line-height 21.4286px;
                font-size 15px;
            }
    }
    div.service:nth-child(odd){
        background-color $color2;
        color #fff;
        figure{
            svg{
                color #FFF !important;
            }
        }
    }
}

section#contact{
    h3{
      text-align center;
      font-size 2em;
    }
      div#contact-container{
        width 90%;
        margin 0 auto;
        div.left{
          float left;
          width 30%;
          background $color2;
          min-height 350px;
          color #FFF;
          ul{
            padding 0;
            padding-top 50px;
            margin 0;
            li{
              list-style none;
              margin-bottom 25px;
              figure{
                width 100%;
                padding 0;
                margin 0;
                text-align center;
                margin-bottom 5px;
                svg{
                  color #FFF !important;
                }
              }
                span{
                  display block;
                  width 100%;
                  text-align center;
                }
            }
          }
        }
          div.right{
            float right;
            width 66%;
            min-height 350px;
          }
      }
}